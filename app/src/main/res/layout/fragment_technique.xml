<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TechniqueFragment"
    android:background="@color/bluebackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/techniqueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="352dp"
            android:layout_height="match_parent"
            android:text="Technique Helper"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/stepCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/techniqueTitle"
        app:layout_constraintBottom_toTopOf="@id/buttonRow"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/stepImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="centerCrop"

                />

            <TextView
                android:id="@+id/stepCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Seal Lips"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:padding="20dp"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="40dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Button
            android:id="@+id/buttonSkip"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Skip"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:cornerRadius="14dp"
            />

        <Space android:layout_width="30dp" android:layout_height="0dp"/>

        <Button
            android:id="@+id/buttonCompleted"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Completed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:cornerRadius="14dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>