<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PB: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editPB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:hint="Input PB Value"
        android:textSize="16sp"
        android:background="@drawable/edit_text_border"
        android:minWidth="120dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="20dp"
        android:hint="Input Text"
        android:textSize="16sp"
        android:background="@drawable/edit_text_border"
        android:minWidth="120dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Badge Thresholds"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="___________________"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="-17dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Perfect Controller X-Day Streak"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editStreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:hint="Input Number of Days"
        android:textSize="16sp"
        android:background="@drawable/edit_text_border"
        android:minWidth="120dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of High Quality Sessions"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:hint="Input Number of Sessions"
        android:textSize="16sp"
        android:background="@drawable/edit_text_border"
        android:minWidth="120dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="At Most X Rescue Days in a Month"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editRescueDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Input Number of Rescue Days"
        android:textSize="16sp"
        android:background="@drawable/edit_text_border"
        android:minWidth="120dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        />

</LinearLayout>