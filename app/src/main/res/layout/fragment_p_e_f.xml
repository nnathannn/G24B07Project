<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pef_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Input PEF"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/input_pef_box"
        app:layout_constraintStart_toStartOf="@+id/input_pef_box"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_pef_box"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_margin="30dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:background="@drawable/smalled_rounded_edges_background"
        android:backgroundTint="@color/another_blue"
        app:layout_constraintTop_toBottomOf="@+id/pef_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/input_pef_box_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="Input Current PEF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/input_pef"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/input_pef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/input_pef_box_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/submit_pef_box"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/smalled_rounded_edges_background"
                android:backgroundTint="@color/white"
                android:hint="Enter PEF"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/submit_pef_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/submit_pef_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="7dp"
                android:text="Submit"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/submit_pef_box"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pef_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_upper_edges_background"
        android:backgroundTint="@color/another_blue"
        android:padding="15dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/input_pef_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/pef_history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PEF History"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pef_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/pef_history_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_pef">
        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>