<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_red"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/input_rescue_pef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Next Step"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/input_rescue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Input Rescue Trial"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/input_rescue_pef"
        app:layout_constraintStart_toStartOf="@+id/input_rescue_pef" />

    <EditText
        android:id="@+id/input_rescue_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:paddingStart="15dp"
        android:background="@drawable/smalled_rounded_edges_background"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter number of rescue"
        app:layout_constraintStart_toStartOf="@+id/input_rescue"
        app:layout_constraintTop_toBottomOf="@+id/input_rescue"/>

    <TextView
        android:id="@+id/input_pef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Input PEF (Optional)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/input_rescue_box"
        app:layout_constraintStart_toStartOf="@+id/input_rescue" />

    <EditText
        android:id="@+id/input_pef_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:paddingStart="15dp"
        android:background="@drawable/smalled_rounded_edges_background"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter current PEF"
        app:layout_constraintStart_toStartOf="@+id/input_pef"
        app:layout_constraintTop_toBottomOf="@+id/input_pef"/>

    <Button
        android:id="@+id/submit_rescue_pef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_pef_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>