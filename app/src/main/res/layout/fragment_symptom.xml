<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SymptomFragment"
    android:background="@color/almost_light_blue">

    <Button
        android:id="@+id/buttonSymptomSubmit"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:text="Submit"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:cornerRadius="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutBox"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/symptomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="352dp"
            android:layout_height="match_parent"
            android:text="Daily Check In"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutBox"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:backgroundTint="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/smalled_rounded_edges_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symptomTitle">

        <TextView
            android:id="@+id/textSymptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptom"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/constraintLayoutBox"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayoutBox"
            app:layout_constraintTop_toTopOf="@+id/constraintLayoutBox"

            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdownSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Symptom"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textSymptom"
            app:layout_constraintBottom_toTopOf="@id/textTrigger"
            app:layout_constraintStart_toStartOf="@+id/constraintLayoutBox"
            app:layout_constraintEnd_toEndOf="@id/constraintLayoutBox"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            >

            <AutoCompleteTextView
                android:id="@+id/filledExposed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>


        </com.google.android.material.textfield.TextInputLayout>







        <TextView
            android:id="@+id/textTrigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigger"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/constraintLayoutBox"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayoutBox"
            app:layout_constraintTop_toBottomOf="@+id/dropdownSymptom"

            />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdownTrigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trigger"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textTrigger"
            app:layout_constraintBottom_toTopOf="@id/layoutTime"
            app:layout_constraintStart_toStartOf="@+id/constraintLayoutBox"
            app:layout_constraintEnd_toEndOf="@id/constraintLayoutBox"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/filledExposed2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"/>





        </com.google.android.material.textfield.TextInputLayout>






        <LinearLayout
            android:id="@+id/layoutTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayoutBox"
            app:layout_constraintStart_toStartOf="@+id/constraintLayoutBox"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayoutBox">

            <Button
                android:id="@+id/buttonDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="16sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:backgroundTint="#30767680"
                android:textColor="@color/black"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                />
            <Space android:layout_width="5dp" android:layout_height="0dp"/>
            <Button
                android:id="@+id/buttonTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="16sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingStart="11dp"
                android:paddingEnd="11dp"
                android:backgroundTint="#30767680"
                android:textColor="@color/black"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_white_rectangle"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSymptomSubmit">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSymptoms"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_symptom"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>










</androidx.constraintlayout.widget.ConstraintLayout>
