<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewMedicine"
    android:layout_width="match_parent"
    android:layout_height="113dp"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@color/another_blue"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCardViewMedicine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textCardViewMedicineType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue Dose: 3"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/layoutCardViewMedicine"
            app:layout_constraintTop_toTopOf="@id/layoutCardViewMedicine"/>

        <TextView
            android:id="@+id/textCardViewMedicineDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 01, 2000 12:00 PM"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/layoutCardViewMedicine"
            app:layout_constraintTop_toTopOf="@id/layoutCardViewMedicine"/>

        <TextView
            android:id="@+id/textCardViewMedicineRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Breath Rating: 3"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintEnd_toEndOf="@id/layoutCardViewMedicine"
            app:layout_constraintBottom_toBottomOf="@id/layoutCardViewMedicine"/>

        <TextView
            android:id="@+id/textCardViewMedicineCheck"
            android:layout_width="82dp"
            android:layout_height="19dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:text="Better"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/green"
            app:layout_constraintStart_toStartOf="@id/layoutCardViewMedicine"
            app:layout_constraintBottom_toBottomOf="@id/layoutCardViewMedicine"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
